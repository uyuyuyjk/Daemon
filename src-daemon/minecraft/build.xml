<project name="Daemon" basedir="../../" default="main">

	<property name="version" value="0.1" />

	<property name="mcp.dir" value="./" />
	<property name="src.dir" value="${mcp}/src" />
	<property name="daemon.dir" value="${mcp.dir}/src-daemon" />
	<property name="build.dir" value="${mcp.dir}/reobf" />
	<property name="forge.dir" value="${mcp.dir}/forge" />

	<target name="install">		
		<exec dir="${forge.dir}" executable="cmd" osfamily="windows">
			<arg line="/c install.cmd" />
		</exec>
		<exec dir="${forge.dir}" executable="sh" osfamily="unix">
			<arg value="install.sh" />
		</exec>
	</target>
	
	<target name="update-src">
		<delete dir="${daemon.dir}" />
		<copy todir="${daemon.dir}/minecraft/tco">
			<fileset dir="${src.dir}/minecraft/tco" />
		</copy>
		<copy file="${src.dir}/minecraft/tco/build.xml" todir="${daemon.dir}/minecraft/tco" />
		<copy file="${src.dir}/minecraft/tco/mcmod.info" todir="${daemon.dir}/minecraft/tco" />
	</target>
	
	<target name="clean">
		<delete dir="${build.dir}" />
	</target>

	<target name="compile">
		<exec dir="${mcp.dir}" executable="cmd" osfamily="windows">
			<arg line="/c recompile.bat" />
		</exec>
		<exec dir="${mcp.dir}" executable="sh" osfamily="unix">
			<arg value="recompile.sh" />
		</exec>
	</target>
	
	<target name="reobfuscate" depends="clean">
		<exec dir="${mcp.dir}" executable="cmd" osfamily="windows">
			<arg line="/c reobfuscate.bat" />
		</exec>
		<exec dir="${mcp.dir}" executable="sh" osfamily="unix">
			<arg value="reobfuscate.sh" />
		</exec>
	</target>

	<target name="package" depends="compile, reobfuscate">
		<copy file="${src.dir}/common/mcmod.info" todir="${build.dir}">
			<filterset>
				<filter token="VERSION" value="${version}" />
			</filterset>
		</copy>
		<copy todir="${build.dir}/minecraft/tco/daemon/sprites">
			<fileset dir="${src.dir}/minecraft/tco/daemon/sprites">
				<exclude name="*.xcf" />
			</fileset>
		</copy>
		<copy todir="${build.dir}/minecraft/tco/daemon/lang">
			<fileset dir="${src.dir}/minecraft/tco/daemon/lang" />
		</copy>

		<jar destfile="${build.dir}/Daemon-${version}.jar" basedir="${build.dir}" />
	</target>

	<target name="main" depends="package" />

</project>